<p id="notice"><%= notice %></p>

<h1>Carts</h1>
<%#= render 'carts/form' %>

<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.product_name %></td>
        <td><%= cart.category %></td>

        <td><%= link_to 'Destroy', cart_path(cart), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Cart', new_cart_path %>
