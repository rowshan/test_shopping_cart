<%= form_for(@cart) do |f| %>
<div id="myForm">
  <div class="field" id="nName">
    <%= f.label :product_name %>
    <%= f.text_field :product_name %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>
